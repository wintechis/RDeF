                            :includesTriple [
                                rdf:subject    <https://www.example.org/aanya>               ;
                                rdf:predicate  <http://xmlns.com/foaf/spec/#Organization>   ; 
                                rdf:object     <https://www.example.org/SpecialParts>        ] ;
                            :includesTriple [
                                rdf:subject    <https://www.example.org/SpecialParts>    ;
                                rdf:predicate   <https://www.example.org/sell_to>   ; 
                                rdf:object     <https://www.example.org/company> ] 
