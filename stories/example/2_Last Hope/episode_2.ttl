:ep2    :hasScenes      _:seq2  .
_:seq2  rdf:type        rdf:Seq ;
        rdf:_1          :scene4 ;
        rdf:_2          :scene5 ;
        rdf:_3          :scene6 . 




:scene4     rdf:type        :TalkScene  ;
            :background     'resources/jose.jpg'    ;
            :hasDialogue    _:b4    .

_:b4        rdf:type        rdf:Seq ;
            rdf:_1          [:hasSpeaker :jose  ;
                            :hasText    "Hallo, ich bin Jack." ] ;
            rdf:_2          [:hasSpeaker :mary  ;
                            :hasText    "Hallo, Jack, ich bin Marz." ] ;
            rdf:_3          [:hasSpeaker :jose  ;
                            :hasText    "Sch√∂n dich kennen zu lernen" ] .



:scene5     rdf:type        :TalkScene  ;
            :background     'resources/jose.jpg'    ;
            :hasDialogue    _:b5    .

_:b5        rdf:type        rdf:Seq ;
            rdf:_1          [:hasSpeaker :jose  ;
                            :hasText    "Hast du das mit den Lehmanns mitbekommen?" ] ;
            rdf:_2          [:hasSpeaker :mary  ;
