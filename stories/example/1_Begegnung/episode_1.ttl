@prefix :       <https://www.example.org/>    .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#>   .
@prefix rdfs:   <https://www.w3.org/2000/01/rdf-schema#>  .
@prefix xsd:    <http://www.w3.org/TR/xmlschema-2/#>    .


:ep1    :hasScenes      _:seq1  .
_:seq1  rdf:type        rdf:Seq ;
        rdf:_1          :scene1 ;
        rdf:_2          :scene2 ;
        rdf:_3          :scene3 . 




:scene1     rdf:type        :TalkScene  ;
            :background     'resources/bg.jpg'    ;
            :hasDialogue    _:b1    .

_:b1        rdf:type        rdf:Seq ;
            rdf:_1          [:hasSpeaker :jack  ;
                            :hasText    '[Tim Berners Lee](https://www.w3.org/People/Berners-Lee/card#i) has an [assistant](http://www.w3.org/2000/10/swap/pim/contact#assistant) named [Amy](https://www.w3.org/People/Berners-Lee/card#amy). Her [full name](https://www.w3.org/2000/01/rdf-schema#label) is [Amy van der Hiel](Amy van der Hiel) .';
                            :includesTriple [
                                rdf:subject    <https://www.w3.org/People/Berners-Lee/card#i>           ; 
                                rdf:predicate  <http://www.w3.org/2000/10/swap/pim/contact#assistant>   ;
                                rdf:object     <https://www.w3.org/People/Berners-Lee/card#amy>      ]  ; 
                            :includesTriple [
                                rdf:subject    <https://www.w3.org/People/Berners-Lee/card#amy>         ;            
                                rdf:predicate  <https://www.w3.org/2000/01/rdf-schema#label>            ; 
                                rdf:object     "Amy van der Hiel"; 
                                #Add comment to display help
                                rdfs:comment    "Albert Einsteins Familienname ist Einstein." ] ;                  ] ;
                        
            rdf:_2          [:hasSpeaker :mary  ;
                            :hasText    "Hallo, Jack, ich bin Marz." ] ;
            rdf:_3          [:hasSpeaker :jack  ;
                            :hasText    "Schön dich kennen zu lernen" ] .



:scene2     rdf:type        :TalkScene  ;
            :background     'resources/jose.jpg'    ;
            :hasDialogue    _:b2    .

_:b2        rdf:type        rdf:Seq ;
            rdf:_1          [:hasSpeaker :jack  ;
                            :hasText    "Hast du das mit den Lehmanns mitbekommen?" ] ;
            rdf:_2          [:hasSpeaker :mary  ;
                            :hasText    "Nein, was ist denn passiert?" ] ;
            rdf:_3          [:hasSpeaker :jack  ;
                            :hasText    "Mh, vergessen" ;
                            :includesTriple [
                                rdf:subject    <https://www.wikidata.org/wiki/Q937>                  ; #Albert Einstein
                                rdf:predicate  <https://www.wikidata.org/wiki/Property:P735>         ; #Vorname
                                rdf:object     <https://www.wikidata.org/wiki/Q577011>        ]      ; #Albert
                            :includesTriple [
                                rdf:subject    <https://www.wikidata.org/wiki/Q937>                  ; #Albert Einstein           
                                rdf:predicate  <https://www.wikidata.org/wiki/Property:P734>         ; #Familienname
                                rdf:object     <https://www.example.org/Einstein>              ; #Einstein
                                #Add comment to display help
                                rdfs:comment    "Albert Einsteins Familienname ist Einstein." ] ;                  
                        ]  .


:scene3     rdf:type        :QueryScene  ;
            :question       'Wo ist mit den Lehmanns passiert?' ;
            :markup_query   'Keine Ahnung. Vielleicht weiß es $Jose' .


